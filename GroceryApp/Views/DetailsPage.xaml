<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroceryApp.DetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="picker" Title="Pick category" />
            <Entry Placeholder="Enter name{Req.}" x:Name="NameField"/>
            <Entry Placeholder="Enter quantity" x:Name="QuantityField" Keyboard="Numeric"/>
            <Button Text="Save" HorizontalOptions="FillAndExpand" Clicked="SaveBTN_Clicked" x:Name="SaveBTN"/>
            <Button Text="Delete" HorizontalOptions="FillAndExpand" Clicked="DeleteBTN_Clicked" x:Name="DeleteBTN"/>
            <Button Text="Cancel" HorizontalOptions="FillAndExpand" Clicked="CancelBTN_Clicked" x:Name="CancelBTN"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>